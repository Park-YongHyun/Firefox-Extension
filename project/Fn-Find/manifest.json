{

	"manifest_version": 2,
	"name": "Fn-Find",
	"version": "1.0",
	"description": "",

	"applications": {
		"gecko": {
			"id": "PAddon@Fn-Find"
			}
	},

	"permissions": [
		"activeTab",
		"contextMenus",
		"find",
		"tabs"
	],

	"icons": {
		"48": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"content_scripts": [
		{
			"all_frames": true,
			"match_about_blank": true,
			"matches": ["<all_urls>"],
			"js": ["script-content.js"]
		}
	],

	"background": {
		"scripts": ["script-background.js"]
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"commands": {
		"shortcuts": {
			"suggested_key": { "default": "Ctrl+Shift+F" },
			"description": "shortcuts"
		}
	}

}